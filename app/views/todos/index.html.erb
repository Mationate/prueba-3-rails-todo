<h2>Index !</h2>

<% if notice.present? %>
  <%= notice %>
<% end %>
<% if alert.present? %>
  <%= alert %>
<% end %>

<ul class="list-group">  
  <% @todos.each do |todo| %>
    <li class="list-group-item"> 
      <%= todo.description %> 
      <%= link_to "Ver", todo_path(todo), class:"btn btn-primary" %> 
    </li>
  <% end %>  
</ul>
<br>
<%= link_to 'Crear una tarea', todos_new_path, class:"btn btn-success" %> 